<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="note"
            type="com.zivapp.notes.model.GroupNote" />

        <variable
            name="format"
            type="com.zivapp.notes.model.FormatSum" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:elevation="12dp"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@{note.member}" />

                <TextView
                    android:id="@+id/note_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toEndOf="@+id/user_name"
                    android:text="@{note.date}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_name"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/et_name_operation"
                        style="@style/text_item_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:text="@{note.message}" />

                    <!--                    android:autofillHints="no"-->
                    <!--                    android:enabled="false"-->
                    <!--                    android:gravity="start"-->
                    <!--                    android:hint="@string/hint_message"-->
                    <!--                    android:inputType="text|textMultiLine|textCapSentences"-->
                    <!--                    android:maxLength="100"-->
                    <!--                    android:maxLines="5"-->

                    <TextView
                        android:id="@+id/et_price_operation"
                        style="@style/text_item_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="2"
                        android:text="@{format.converted_sum}" />

                    <!--                    android:autofillHints="no"-->
                    <!--                    android:enabled="false"-->
                    <!--                    android:gravity="start"-->
                    <!--                    android:hint="@string/hint_message"-->
                    <!--                    android:inputType="number"-->
                    <!--                    android:maxLength="9"-->

                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>