<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zivapp.countandnote">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".network.NetworkOfflineSecurity"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CountAndNote">
        <activity
            android:name=".view.contacts.ContactsListActivity"
            android:parentActivityName=".view.mainmenu.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.groups.GroupNoteActivity"
            android:parentActivityName=".view.mainmenu.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.note.NoteActivity"
            android:parentActivityName=".view.mainmenu.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.userinfo.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.splashscreen.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.mainmenu.MainActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>